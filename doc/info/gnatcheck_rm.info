        for Idx in I .. J loop
           if J < 0 then
              case I is
                 when 1 =>
                    if Idx /= 0 then  --  FLAG (if rule parameter is 3)
                       J := J / Idx;
                    end if;
                 when others =>
                    J := J + Idx;
              end case;
           end if;
        end loop;
